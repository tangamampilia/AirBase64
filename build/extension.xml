<extension xmlns="http://ns.adobe.com/air/extension/4.0">
    <id>net.tangamampilia.AirBase64</id>
    <versionNumber>1.0</versionNumber>
    <platforms>
        <platform name="iPhone-ARM">
            <applicationDeployment>
                <nativeLibrary>libAirBase64.a</nativeLibrary>
                <initializer>AirBase64Initializer</initializer>
                <finalizer>AirBase64Finalizer</finalizer>
            </applicationDeployment>
        </platform>
        <platform name="iPhone-x86">
        	<applicationDeployment>
            	<nativeLibrary>libAirBase64.a</nativeLibrary>
            	<initializer>AirBase64Initializer</initializer> 
            	<finalizer>AirBase64Finalizer</finalizer>
			</applicationDeployment>
		</platform>
        <platform name="Android-ARM"> 
            <applicationDeployment> 
                <nativeLibrary>libAirBase64.jar</nativeLibrary> 
                <initializer>net.tangamampilia.AirBase64</initializer> 
                <finalizer>net.tangamampilia.AirBase64</finalizer> 
            </applicationDeployment>
        </platform> 
        <platform name="default"> 
            <applicationDeployment/> 
        </platform>
    </platforms>
</extension>